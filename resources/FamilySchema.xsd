<?xml version="1.0" encoding="UTF-8"?>
<xs:schema xmlns:xs="http://www.w3.org/2001/XMLSchema"
        targetNamespace="http://www.example.org/FamilySchema"
        xmlns:tns="http://www.example.org/FamilySchema"
        elementFormDefault="qualified">

    <xs:element name="Families">
    <xs:complexType>
        <xs:sequence>
            <xs:element name="family" maxOccurs="unbounded" minOccurs="1" type="tns:family_type" />
        </xs:sequence>
    </xs:complexType>
</xs:element>


    <xs:complexType name="family_type">
        <xs:sequence>
            <xs:element name="mother" maxOccurs="unbounded" minOccurs="1" type="tns:mother_type" />
            <xs:element name="father" maxOccurs="unbounded" minOccurs="1" type="tns:father_type" />
            <xs:element name="children" maxOccurs="unbounded" minOccurs="1" type="tns:children_type" />
        </xs:sequence>
        <xs:attribute name="adress" type="xs:string"/>
    </xs:complexType>


    <xs:complexType name="mother_type">
        <xs:sequence>
            <xs:element name="maidenname" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="name" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="surname" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="age" maxOccurs="unbounded" minOccurs="1" type="xs:int" />
            <xs:element name="gender" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="hobby" maxOccurs="unbounded" minOccurs="1" type="tns:hobby_type" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="hobby_type">
        <xs:sequence>
            <xs:element name="title" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="times-per-week" maxOccurs="unbounded" minOccurs="1" type="xs:int" />
            <xs:element name="schedule" maxOccurs="unbounded" minOccurs="1" type="tns:schedule_type" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="schedule_type">
        <xs:sequence>
            <xs:element name="day" maxOccurs="unbounded" minOccurs="1" type="tns:day_type" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="day_type">
        <xs:sequence>
            <xs:element name="day_name" id="gDay" />
            <xs:element name="time"  type="xs:time" />
        </xs:sequence>
    </xs:complexType>


    <xs:complexType name="father_type">
        <xs:sequence>
            <xs:element name="name" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="surname" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="age" maxOccurs="unbounded" minOccurs="1" type="xs:int" />
            <xs:element name="gender" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="children_type">
        <xs:sequence>
            <xs:element name="child" maxOccurs="unbounded" minOccurs="1" type="tns:child_type" />
        </xs:sequence>
    </xs:complexType>

    <xs:complexType name="child_type">
        <xs:sequence>
            <xs:element name="name" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="surname" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
            <xs:element name="age" maxOccurs="unbounded" minOccurs="1" type="xs:int" />
            <xs:element name="gender" maxOccurs="unbounded" minOccurs="1" type="xs:string" />
        </xs:sequence>
    </xs:complexType>

</xs:schema>